 class Triangle 
{
    public static void main(String[] args)
    {
        int n1 = 1;
        int n2 = 3; 
        int z = 2;
        int n3;
        int i, count = 4; 
        System.out.println(n1 + " " +n2);
        
        for(i = 2; i < count; i++)
        {
            n3 = n1 + n2 + z;
            System.out.println(" " + n3);
            z = n3;
        }
    }
}  
